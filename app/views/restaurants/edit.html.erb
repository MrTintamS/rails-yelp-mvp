<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <h1 class="text-center text-primary mb-4">Add a New Restaurant</h1>
          <%= simple_form_for @restaurant, html: { class: "form" } do |f| %>
            <div class="mb-3">
              <%= f.input :name, label: "Restaurant Name", input_html: { class: "form-control", placeholder: "Enter restaurant name" } %>
            </div>
            <div class="mb-3">
              <%= f.input :address, label: "Address", input_html: { class: "form-control", placeholder: "Enter full address" } %>
            </div>
            <div class="mb-3">
              <%= f.input :phone_number, label: "Phone Number", input_html: { class: "form-control", placeholder: "Enter phone number" } %>
            </div>
            <div class="mb-3">
              <%= f.input :category, label: "Category", collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Select a category", input_html: { class: "form-select" } %>
            </div>
            <div class="d-grid">
              <%= f.button :submit, "Create Restaurant", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="text-center mt-3">
        <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
