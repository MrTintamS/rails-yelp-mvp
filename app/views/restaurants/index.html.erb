<div class="container mt-4">
  <!-- Titre principal -->
  <h1 class="mb-4 text-center text-primary fw-bold">Liste des Restaurants</h1>
  <!-- Bouton pour ajouter un restaurant -->
  <div class="text-center mb-5">
    <%= link_to "Ajouter un Restaurant", new_restaurant_path, class: "btn btn-primary btn-lg shadow-sm" %>
  </div>
  <!-- Liste des restaurants -->
  <div class="row g-4">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
          <!-- En-tête de la carte -->
          <div class="card-header bg-primary text-white text-center fw-bold">
            <%= restaurant.name.upcase %>
          </div>
          <!-- Corps de la carte -->
          <div class="card-body d-flex flex-column">
            <ul class="list-unstyled mb-4">
              <li><strong>Catégorie :</strong> <%= restaurant.category.capitalize %></li>
              <li><strong>Adresse :</strong> <%= restaurant.address %></li>
              <% if restaurant.phone_number.present? %>
                <li><strong>Téléphone :</strong> <%= restaurant.phone_number %></li>
              <% end %>
            </ul>
            <!-- Section Avis -->
            <div class="mb-4">
              <strong>Note Moyenne :</strong>
              <% if restaurant.reviews.any? %>
                <%= render 'shared/average_rating', reviews: restaurant.reviews %>
              <% else %>
                <span class="text-muted">Pas encore noté</span>
              <% end %>
            </div>
            <!-- Bouton Voir les détails -->
            <%= link_to "Voir les détails", restaurant_path(restaurant), class: "btn btn-outline-primary btn-sm w-100 mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
